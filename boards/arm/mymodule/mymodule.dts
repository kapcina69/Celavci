/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>

/ {
    model = "myModule";
    compatible = "mymodules";

    chosen {
        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
        zephyr,code-partition = &slot0_partition;
    };

    // zephyr,user {
    //     io-channels = <&adc 0>;
    // };

    leds {
        compatible = "gpio-leds";
        led_green: led_green { gpios = <&gpio0  2 GPIO_ACTIVE_LOW>; };
        led_blue:  led_blue  { gpios = <&gpio0  3 GPIO_ACTIVE_LOW>; };
        led_red:   led_red   { gpios = <&gpio0 30 GPIO_ACTIVE_LOW>; };
        led3: led_3 { status = "disabled"; };
    };

    /* Ostali korisni GPIO-i */
    custom_gpio_out {
        compatible = "gpio-keys";
        pulse_cathode: pulse_cathode { gpios = <&gpio0  7 GPIO_ACTIVE_HIGH>; };
        pulse_anode:   pulse_anode   { gpios = <&gpio0 15 GPIO_ACTIVE_HIGH>; };
        dc_dc_en:      dc_dc_en      { gpios = <&gpio0  4 GPIO_ACTIVE_HIGH>; };
        buzz:          buzz          { gpios = <&gpio0 28 GPIO_ACTIVE_HIGH>; };

        /* DODATO: PB_MCU (simulira pritisak tastera) i KILL ka LTC2950 */
        pb_mcu: pb_mcu { gpios = <&gpio0 29 GPIO_ACTIVE_LOW>; };
        kill_ltc2950: kill { gpios = <&gpio0  9 GPIO_ACTIVE_LOW>; };
    };

    aliases {
        led0 = &led_green;
        led1 = &led_blue;
        led2 = &led_red;

        pulse-cathode = &pulse_cathode;
        pulse-anode   = &pulse_anode;
        dc-dc-en      = &dc_dc_en;

        /* DODATO: aliasi za PB_MCU i KILL */
        pb-mcu = &pb_mcu;
        kill   = &kill_ltc2950;
        buzz   = &buzz;
        i2c0 = &i2c0;
    };
};

